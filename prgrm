    "def armstrong(n):\n",
    "    s=0\n",
    "    f=1\n",
    "    i=1\n",
    "    while i<=n:\n",
    "        r=n%10\n",
    "        for i in range(1,r):\n",
    "            f=f*i\n",
    "            s=s+f(r)\n",
    "            i=i+1\n",
    "            n=n//10\n",
    "    return s\n",
    "armstrong(145)                    \n",
    "        \n"
